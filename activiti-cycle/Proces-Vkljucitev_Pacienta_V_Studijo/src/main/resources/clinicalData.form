﻿<h1>Vnos osnovnih podatkov pacienta</h1>
<table>
	<tr>
		<td>
			<label>Teža</label>
		</td>
	</tr>
	<tr>
		<td>
			<input type="number" name="weight" value="" />
			<input type="hidden" name="weight_type" value="Integer" />
		</td>
	</tr>
	<tr>
		<td>
			<label>Višina</label>
		</td>
	</tr>
	<tr>
		<td>
			<input type="number" name="height" value="" />
			<input type="hidden" name="height_type" value="Integer" />
		</td>
	</tr>
	<tr>
		<td>
			<label>Kadilski status</label>
		</td>
	</tr>
	<tr>
		<td>
			<select name="smokingIntensity">
				<option value="at0003">Trenutni uporabnik</option>
				<option value="at0004">Redni uživalec tobaka v preteklosti</option>
				<option value="at0006">Običajni uživalec tobaka v preteklosti</option>
				<option value="at0016">Nikoli kadilec</option>
			</select>
			<input type="hidden" name="smokingIntensity_type" value="String" />
		</td>
	</tr>
	<tr>
		<td>
			<label>Oblika uživanja tobaka</label>
		</td>
	</tr>
	<tr>
		<td>
			<select name="smokingType">
				<option value="at0.18">Cigarete - tovarniške</option>
				<option value="at0.19">Cigarete - doma izdelane</option>
				<option value="at0.20">Cigare</option>
				<option value="at0.21">Pipa</option>
			</select>
			<input type="hidden" name="smokingType_type" value="String" />
		</td>
	</tr>	
	<tr>
		<td>
			<label>Oblika uživanja alkohola</label>
		</td>
	</tr>
	<tr>
		<td>
			<select name="alcoholType">
				<option value="at0.18">*All alcohol(en)</option>
				<option value="at0.19">*All beer(en)</option>
				<option value="at0.20">*All wine(en)</option>
				<option value="at0.21">*All spirits(en)</option>
				<option value="at0.22">*Full strength beer(en)</option>
				<option value="at0.23">*Light beer(en)</option>
				<option value="at0.24">Rdeče vino</option>
				<option value="at0.25">*White wine(en)</option>
				<option value="at0.26">*Fortified wine(en)</option>		
				
			</select>
			<input type="hidden" name="alcoholType_type" value="String" />
		</td>
	</tr>	
</table>
