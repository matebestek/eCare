xquery version "1.0";
declare namespace functx = "http://www.functx.com";
declare function functx:id-untyped 
  ( $node as node()* ,
    $id as xs:anyAtomicType )  as element()* {
       
  $node//*[@* = $id]
} ;
declare option exist:serialize "method=xhtml media-type=text/html indent=yes";

let $users := xmldb:get-child-collections('/db/eAstma/')

return 
concat("&#10;", string-join(
    for $user in $users
        for $value in collection(concat('/db/eAstma/', $user, '/openEHR-EHR-OBSERVATION.pulmonary_function.v1/'))
            let $date := functx:id-untyped($value,'at0002')/node()[2]/node()[1]/text()
	    let $PEF  := functx:id-untyped($value,'at0058')/node()[2]/node()[2]/text()
	    let $niceDate := substring(translate($date, 'T', ' '), 1, 19 )
	    order by $user, $niceDate
		       
            return  fn:string-join(( xs:string($user), xs:string($niceDate), xs:string($PEF) ), ", " )
, "&#10;"), "&#10;")
